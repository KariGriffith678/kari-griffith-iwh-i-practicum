doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    style.
      body { font-family: Arial, sans-serif; padding: 20px; }
      table { border-collapse: collapse; width: 100%; margin-top: 20px; }
      th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      th { background-color: #f8c8cc; font-weight: bold; }
      tr:nth-child(even) { background-color: #f9f9f9; }
      tr:hover { background-color: #f1f1f1; }
      a { display: inline-block; margin-bottom: 20px; text-decoration: none; color: #0066cc; }

  body
    h1= title

    //- Link to add/update records
    a(href="/update-cobj") Add/Update this table
    br
    br

    if data.length
      table
        thead
          tr
            th Name
            th Make
            th Model
        tbody
          each record in data
            tr
              td= record.properties.name || 'N/A'
              td= record.properties.make || 'N/A'       
              td= record.properties.model || 'N/A'      
    else
      p No vehicle records foun
